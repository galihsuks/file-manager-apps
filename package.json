{
    "name": "file-manager-apps",
    "version": "1.0.0",
    "description": "File Manager Desktop Application",
    "author": "galihsuks",
    "main": "electron/main.js",
    "scripts": {
        "electron": "electron .",
        "build": "electron-builder"
    },
    "build": {
        "appId": "com.filemanager.apps",
        "productName": "File Manager Apps",
        "directories": {
            "output": "dist"
        },
        "files": [
            "electron/**/*",
            "backend/**/*",
            "frontend/dist/**/*",
            "package.json"
        ],
        "win": {
            "target": "nsis"
        }
    },
    "devDependencies": {
        "electron": "^40.4.1",
        "electron-builder": "^26.7.0"
    },
    "dependencies": {
        "axios": "^1.13.5"
    }
}
